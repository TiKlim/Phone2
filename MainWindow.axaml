<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Phone2.MainWindow"
        Title="Phone2" MaxWidth="1920" MinWidth="1920" MaxHeight="1080" MinHeight="1080">
	<Panel Background="White">
		<TextBlock Margin="-120,100,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="DemiBold">
			Is this your phone number?
		</TextBlock>
		<Button  Name="b1" Background="White" Margin="-300,200,0,10" Height="50" Width="80" HorizontalAlignment="Center" VerticalAlignment="Stretch" CornerRadius="10" BorderBrush="Gray">
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="DemiBold">
				Yes
			</TextBlock>
		</Button>
		<Button Margin="-120,201,0,10" Background="White" Height="50" Width="80" HorizontalAlignment="Center" VerticalAlignment="Stretch" CornerRadius="10" BorderBrush="Gray" Click="ClickHandler">
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="DemiBold">
				No
			</TextBlock>
		</Button>
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="DemiBold" Margin="320,278,-180,187" x:Name="message"></TextBlock>
	</Panel>
</Window>
